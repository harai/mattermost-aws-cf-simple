[Unit]
Description=Mattermost
After=network.target
After=mysqld.service
BindsTo=mysqld.service
[Service]
Type=notify
EnvironmentFile=/var/opt/mattermost/config.env
ExecStart=/opt/mattermost/bin/mattermost -c /var/opt/mattermost/persist/config.json
TimeoutStartSec=3600
KillMode=mixed
Restart=always
RestartSec=10
WorkingDirectory=/opt/mattermost
User=mm
Group=mm
LimitNOFILE=49152
[Install]
WantedBy=multi-user.target
